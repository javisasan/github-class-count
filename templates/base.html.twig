<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="/assets/bootstrap-4.0.0-dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            <link rel="stylesheet" href="/assets/css/style.css" />
        {% endblock %}
    </head>
    <div>
        {% block body %}


            {{ form_start(form) }}
            <div class="alert alert-secondary">
            <h3><span class="git-title">Search for</span> https://github.com/{{ form_widget(form.userName) }}/{{ form_widget(form.repositoryName) }}</h3>
            </div>
            {{ form_end(form) }}

            {% if githubData is not empty %}
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>Word</th>
                        <th>Count</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for word, count in githubData.wordList %}
                            <tr>
                                <td>{{ word }}</td>
                                <td>{{ count }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <div class="alert alert-primary" role="alert">
                    {{ githubData.rateLimit }}
                </div>
            {% endif %}
        {% endblock %}
        {% block javascripts %}
            <script src="/assets/jquery-3.3.1/jquery-3.3.1.min.js"></script>
            <script src="/assets/bootstrap-4.0.0-dist/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
